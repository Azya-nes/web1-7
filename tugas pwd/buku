CREATE DATABASE perpustakaan_db;
USE perpustakaan_db;

CREATE TABLE buku (
    id_buku INT(11) PRIMARY KEY AUTO_INCREMENT,
    judul VARCHAR(255) NOT NULL,
    penulis VARCHAR(100) NOT NULL,
    tahun_terbit YEAR(4),
    penerbit VARCHAR(100)
);

